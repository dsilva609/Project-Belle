<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Project Ariel</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Styles.Render(Links.Content.Responsive_css)
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryui")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render(Links.Scripts.bootbox_js)
	@RenderSection("scripts", required: false)
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Project Ariel", MVC.Home.Index(), new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Home", MVC.Home.Index())</li>
					<li>@Html.ActionLink("About", MVC.Home.About())</li>
					<li>@Html.ActionLink("Contact", MVC.Home.Contact())</li>
					<li>@Html.ActionLink("Players", MVC.Player.Index())</li>
					<li>@Html.ActionLink("Cards", MVC.Card.Index())</li>
					<li>@Html.ActionLink("Game", MVC.Game.Index())</li>
					@if (User.IsInRole("Admin"))
					{
						<li>@Html.ActionLink("Error Log", MVC.Elmah.Index())</li>
					}
				</ul>
				@Html.Partial(MVC.Shared.Views._LoginPartial)
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()

		@Scripts.Render("~/bundles/custom")
		<footer>
			<br />
			<p>&copy; @DateTime.Now.Year - Project Ariel</p>
		</footer>
	</div>
</body>
</html>